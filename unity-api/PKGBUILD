# vercheck-pkgbuild: auto
# vercheck-ubuntu: name=${pkgname}, repo=zesty

pkgname=unity-api
_actual_ver=8.0
_extra_ver=+17.04.20161215
pkgver=${_actual_ver}${_extra_ver/\+/.}
pkgrel=1
pkgdesc="API for Unity shell integration"
arch=(i686 x86_64)
url="https://launchpad.net/unity-api"
license=(LGPL)
groups=(unity)
depends=(glib2)
makedepends=(cmake doxygen graphviz python qt5-base)
source=("https://launchpad.net/ubuntu/+archive/primary/+files/${pkgname}_${_actual_ver}${_extra_ver}.orig.tar.gz")
sha512sums=('178e68e1aea3e5c24a5441fd8678f70a46c57a915f879fca2185524fc3a3214bdf26ffc2f50149f00b0401c3c10445c27d83a048f151501a7992ed402e616abc')

build() {
	
    mkdir -p build
    cd build
    cmake .. \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_INSTALL_LIBDIR=/usr/lib \
        -DNO_TESTS=TRUE
	make
}

package() {
	cd build
	make DESTDIR="${pkgdir}/" install
}
